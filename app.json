{
  "expo": {
    "name": "Pet Care AI",
    "slug": "pet-care-ai-mobile",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "petcare",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#3B82F6"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.petcare.ai",
      "infoPlist": {
        "NSCameraUsageDescription": "We need camera access to photograph symptoms for AI analysis",
        "NSPhotoLibraryUsageDescription": "We need photo library access to select pet photos"
      }
    },
    "android": {
      "package": "com.petcare.ai",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#3B82F6"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Pet Care AI to access your camera to photograph symptoms"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
